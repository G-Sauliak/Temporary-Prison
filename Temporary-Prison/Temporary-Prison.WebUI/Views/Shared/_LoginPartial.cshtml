@using Temporary_Prison.Business.SecurityPrincipal;
@if (Request.IsAuthenticated)
{
    var identity = (HttpContext.Current.User as UserPrincipal).Identity as UserIdentity;
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink($"Hello {identity.Name}", "Index", "Home", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post,new{ id = "logoutForm"}))
            {
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            }
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
