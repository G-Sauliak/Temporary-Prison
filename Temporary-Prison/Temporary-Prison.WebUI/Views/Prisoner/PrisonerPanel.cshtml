@model IEnumerable<Temporary_Prison.Common.Models.Prisoner>

@{
    ViewBag.Title = "list of prisoners";
}
<style>
    i {
        vertical-align: middle;
    }

    .table-users tbody tr:hover {
        cursor: pointer;
        background-color: #eee;
    }

    .nav-user-photo {
        vertical-align: middle;
    }

    .user_panel {
        width: 100%;
    }
</style>
<div class="container ">
    <div class="row">
        <div class="panel panel-default user_panel ">
            <div class="panel-heading">
                <h3 class="panel-title">List Prisoners</h3>
            </div>
            <div class="panel-body">
                <div class="table-container">
                    <table class="table-users table">
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td width="5" align="center">
                                        <i class="glyphicon glyphicon-user"></i>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BirthDate.Value)
                                    </td>
                                    <td align="center">
                                        @Html.ActionLink("Details", "DetailsOfPrisoner", new { id = item.PrisonerId })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

