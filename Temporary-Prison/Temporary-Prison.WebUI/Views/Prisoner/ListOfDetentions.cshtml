@model IEnumerable<Temporary_Prison.Common.Models.DetentionPagedList>
@using X.PagedList
@using X.PagedList.Mvc
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateOfDetention)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PlaceofDetention)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfRelease)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfDetention.Value.ToShortDateString())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceofDetention)
            </td>
            <td>
                @if (item.DateOfRelease != null)
                {
                    @Html.DisplayFor(modelItem => item.DateOfRelease)
                }
            </td>
            <td>
                @if (User.IsInRole("Admin") || User.IsInRole("Editor") && item.DateOfRelease == null)
                {
                    @Html.ActionLink("Release", "ReleasePrisoner", new { id = item.DetentionID }, new { @class = "btn btn-success btn-xs" })
                }
                @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                {
                    @Html.ActionLink("Edit |", "EditDetention", "Editor", new { id = item.DetentionID }, string.Empty)
                    @Html.ActionLink("Delete |", "DeleteDetention", "Editor", new { id = item.DetentionID }, string.Empty)
                }
                @Html.ActionLink("Details", "DetailsOfDetention", new { id = item.DetentionID })
            </td>
        </tr>
    }
</table>

@Html.PagedListPager(Model as IPagedList, page => Url.Action("Index",
    new
    {
        page,
        currentTotal = ViewBag.CurrentTotalOfDetentions

    }), PagedListRenderOptions.MinimalWithPageCountText)
