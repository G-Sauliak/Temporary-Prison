@model Temporary_Prison.Models.EditDetentionViewModel

@{
    ViewBag.Title = "EditDetention";
}
@using (Html.BeginForm("EditDetention", "Editor", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
    @Html.HiddenFor(model => model.DetentionID)

    <div>
        <h4 class="col-lg-5">
            Detained
        </h4>
    </div>
    <div>
        <h4 class="col-lg-5">Delivered</h4>

    </div>
    <dl class="dl-horizontal col-lg-5">
        <dt>
            @Html.LabelFor(model => model.DateOfDetention) <br>
            <br>
        </dt>
        <dd>
            @Html.EditorFor(model => model.DateOfDetention, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DateOfDetention, string.Empty, new { @class = "text-danger" })
        </dd>


    </dl>
    <dl class="dl-horizontal col-lg-5">
        <dt>
            @Html.LabelFor(model => model.DateOfArrival) <br>
            <br>
        </dt>
        <dd>
            @Html.EditorFor(model => model.DateOfArrival, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DateOfArrival, string.Empty, new { @class = "text-danger" })
        </dd>
    </dl>
    <div>
        <h4 class="col-lg-5">Detained by an employee</h4>

    </div>
    <div>
        <h4 class="col-lg-5">Delivered by an employee</h4>

    </div>
    @Html.HiddenFor(model => model.DetainedEmployee.EmployeeID)
    <dl class="dl-horizontal col-lg-5">
        <dt> @Html.LabelFor(model => model.DetainedEmployee.FirstName) </dt>
        <dd>
            @Html.EditorFor(model => model.DetainedEmployee.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DetainedEmployee.FirstName, string.Empty, new { @class = "text-danger" })
        </dd>

        <dt> @Html.LabelFor(model => model.DetainedEmployee.Surname) </dt>
        <dd>
            @Html.EditorFor(model => model.DetainedEmployee.Surname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DetainedEmployee.Surname, string.Empty, new { @class = "text-danger" })
        </dd>

        <dt> @Html.LabelFor(model => model.DetainedEmployee.LastName) </dt>
        <dd>
            @Html.EditorFor(model => model.DetainedEmployee.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DetainedEmployee.LastName, string.Empty, new { @class = "text-danger" })
        </dd>

        <dt> @Html.LabelFor(model => model.DetainedEmployee.Position) </dt>
        <dd>
            @Html.EditorFor(model => model.DetainedEmployee.Position, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DetainedEmployee.Position, string.Empty, new { @class = "text-danger" })
        </dd>
    </dl>
    @Html.HiddenFor(model => model.DeliveredEmployee.EmployeeID)
    <dl class="dl-horizontal col-lg-5">
        <dt> @Html.LabelFor(model => model.DeliveredEmployee.FirstName) </dt>
        <dd>
            @Html.EditorFor(model => model.DeliveredEmployee.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DeliveredEmployee.FirstName, string.Empty, new { @class = "text-danger" })
        </dd>

        <dt> @Html.LabelFor(model => model.DeliveredEmployee.Surname) </dt>
        <dd>
            @Html.EditorFor(model => model.DeliveredEmployee.Surname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DeliveredEmployee.Surname, string.Empty, new { @class = "text-danger" })
        </dd>

        <dt> @Html.LabelFor(model => model.DeliveredEmployee.LastName) </dt>
        <dd>
            @Html.EditorFor(model => model.DeliveredEmployee.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DeliveredEmployee.LastName, string.Empty, new { @class = "text-danger" })
        </dd>

        <dt> @Html.LabelFor(model => model.DeliveredEmployee.Position) </dt>
        <dd>
            @Html.EditorFor(model => model.DeliveredEmployee.Position, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DeliveredEmployee.Position, string.Empty, new { @class = "text-danger" })
        </dd>
    </dl>

   
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 col-lg-2 col-lg-offset-10 ">
            <input type="submit" value="Update detention" class="btn-primary">
        </div>
    </div>
}
<p>
    @Html.ActionLink("Back", "DetailsOfPrisoner", "Prisoner",
    new { id = Model.PrisonerID },
    new { @class = "btn btn-default" })
</p>

@section scripts
{
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
