@model IEnumerable<Temporary_Prison.Common.Models.User>
@using X.PagedList
@using X.PagedList.Mvc

<br />
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Edit Roles", "ViewAllRoles", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-default" })
</p>
<br />
@using (Html.BeginForm("Index", "Admin", FormMethod.Get))
{
    <div class="form-group">
        Search: @Html.TextBox("search", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </div>
}
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new { UserName = item.UserName, redirectUrl = ViewBag.RedirectUrl })
                
                @if ((item.UserName.ToLower() != this.User.Identity.Name.ToLower()))
                {
                 @Html.ActionLink("Delete", "Delete", new { UserName = item.UserName, redirectUrl = ViewBag.RedirectUrl })
                }
            </td>
        </tr>
                }
</table>

<br />
@Html.PagedListPager(Model as IPagedList, page => Url.Action("Index", new
{
    page,
    search = ViewBag.searc,
    currentFilter = ViewBag.CurrentFilter
}), PagedListRenderOptions.MinimalWithPageCountText)
<hr />
