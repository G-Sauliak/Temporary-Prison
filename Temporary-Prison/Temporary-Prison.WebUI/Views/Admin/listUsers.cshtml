@model IEnumerable<Temporary_Prison.Common.Models.User>
@using X.PagedList
@using X.PagedList.Mvc
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new { UserName = item.UserName, redirectUrl = ViewBag.RedirectUrl })

                @if ((item.UserName.ToLower() != this.User.Identity.Name.ToLower()))
                {
                    @Html.ActionLink("Delete", "DeleteUser", new { UserName = item.UserName, redirectUrl = ViewBag.RedirectUrl })
                }
            </td>
        </tr>
    }
</table>

<br />
@Html.PagedListPager(Model as IPagedList, page => Url.Action("Index", new
{
    page,
    search = ViewBag.searc
}), PagedListRenderOptions.MinimalWithPageCountText)